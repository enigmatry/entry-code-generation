@using Enigmatry.Blueprint.CodeGeneration.Configuration.Form.Model.Select;
@using Enigmatry.Blueprint.CodeGeneration.Templates.HtmlHelperExtensions.Angular;
@model Enigmatry.Blueprint.CodeGeneration.Configuration.Form.Model.Select.SelectFormControlModel;
<mat-form-field appearance="fill">
    <mat-label>@Model.DisplayName</mat-label>
    @if (Model.SelectType == SelectFormControlType.FixedSelect || Model.SelectType == SelectFormControlType.AsyncSelect)
    {
    <mat-select formControlName="@Model.Property"@Html.LookupServiceChangeEventTrigger(Model.LookupMedhod)>
        <mat-option *ngFor="let option of lookupService.@(Model.LookupMedhod.Name)$ | async" [value]="option.value">{{option.displayName}}</mat-option>
    </mat-select>
    }
    else if (@Model.SelectType == SelectFormControlType.AsyncCustomSelect)
    {

    }
</mat-form-field>