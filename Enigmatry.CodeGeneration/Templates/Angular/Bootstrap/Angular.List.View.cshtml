@using Enigmatry.CodeGeneration.Templates.HtmlHelperExtensions.Angular;
@model Enigmatry.CodeGeneration.Configuration.List.ListComponentModel;

<div class="mat-elevation-z8">
    <table mat-table class="full-width-table" matSort aria-label="Elements">
        @foreach (var column in Model.Columns)
        {
            <ng-container matColumnDef="@column.Property">
                <th mat-header-cell *matHeaderCellDef mat-sort-header>@column.DisplayName</th>
                <td mat-cell *matCellDef="let row">
                    @if (column.UseCustomCellComponent)
                    {
                        @:<@column.CustomCellComponent [item]="row" [propertyName]="'@column.Property'"></@column.CustomCellComponent>
                    }
                    else
                    {
                        @:{{row.@column.Property@Html.Pipe(column.Formatter)}}
                    }
                </td>
            </ng-container>
        }
        <tr mat-header-row *matHeaderRowDef="displayedColumns"></tr>
        <tr mat-row *matRowDef="let row; columns: displayedColumns;" [routerLink]="['/@(Model.ComponentInfo.Feature.Name.ToLowerInvariant())', row.id]"></tr>
    </table>

    <mat-paginator #paginator [length]="dataSource?.totalRecords" [pageSizeOptions]="pageSizeOptions"
        [pageIndex]="queryParams.pageNumber - 1" [pageSize]="queryParams.pageSize">
    </mat-paginator>
</div>